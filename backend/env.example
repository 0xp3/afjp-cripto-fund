# Database Configuration
POSTGRES_DB="afjp_crypto"
POSTGRES_USER="afjp_user"
POSTGRES_PASSWORD="your-secure-database-password-here"
DATABASE_URL="postgresql://afjp_user:your-secure-database-password-here@localhost:5434/afjp_crypto?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6381"

# Aptos Configuration
APTOS_NODE_URL="https://fullnode.devnet.aptoslabs.com"
APTOS_FAUCET_URL="https://faucet.devnet.aptoslabs.com"
AFJP_MODULE_ADDRESS="0x1234567890abcdef1234567890abcdef12345678"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Health Check
HEALTH_CHECK_INTERVAL=30000

# pgAdmin Configuration (Optional)
PGADMIN_EMAIL="your-email-here"
PGADMIN_PASSWORD="your-pgadmin-password-here"
